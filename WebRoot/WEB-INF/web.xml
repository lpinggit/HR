<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
 <servlet>
 <servlet-name>Controller</servlet-name>
 <servlet-class>com.bluedot.controller.Controller</servlet-class>
 </servlet>
  <servlet-mapping>
  <servlet-name>Controller</servlet-name>
  <url-pattern>*.do</url-pattern>
  </servlet-mapping>
    <filter>
  	<filter-name>security</filter-name>
  	<filter-class>com.bluedot.filter.SecurityFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>security</filter-name>
  	<url-pattern>/viewUser.do</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>security</filter-name>
  	<url-pattern>/publishRecruitInfo.do</url-pattern>
  </filter-mapping>
 <filter-mapping>
  	<filter-name>security</filter-name>
  	<url-pattern>/viewRecruitInfo.do</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>security</filter-name>
  	<url-pattern>/manageRecruitInfo.do</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>security</filter-name>
  	<url-pattern>/addRecommender.do</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>security</filter-name>
  	<url-pattern>/selectInterview.do</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>security</filter-name>
  	<url-pattern>/passedFirstInterview.do</url-pattern>
  </filter-mapping>
   <filter-mapping>
  	<filter-name>security</filter-name>
  	<url-pattern>/passedFinalInterview.do</url-pattern>
  </filter-mapping>
   <filter-mapping>
  	<filter-name>security</filter-name>
  	<url-pattern>/getOffterInterview.do</url-pattern>
  </filter-mapping>
   <filter-mapping>
  	<filter-name>security</filter-name>
  	<url-pattern>/viewCredit.do</url-pattern>
  </filter-mapping>
   <filter-mapping>
  	<filter-name>security</filter-name>
  	<url-pattern>/addUser.do</url-pattern>
  </filter-mapping>
   <filter-mapping>
  	<filter-name>security</filter-name>
  	<url-pattern>/addRole.do</url-pattern>
  </filter-mapping>
   <filter-mapping>
  	<filter-name>security</filter-name>
  	<url-pattern>/viewRole.do</url-pattern>
  </filter-mapping>
 
</web-app>
